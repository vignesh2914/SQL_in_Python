cursor = mydb.cursor()

cursor.execute("CREATE DATABASE IF NOT EXIST test")

CREATE TABLE IF NOT EXIST test.vicky(ID int(10) PRIMARY KEY, 
                                     FIRST_NAME VARCHAR(30), 
                                     LAST_NAME VARCHAR(30), 
                                     PH_NO INT(15))

# --> TO USE AND SHOW

cursor.execute('USE test')

cursor.execute('SHOW TABLES')

